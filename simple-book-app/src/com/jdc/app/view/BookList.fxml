<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="view" stylesheets="@common.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.app.view.BookList">
   <children>
      <HBox styleClass="search-bar">
         <children>
            <ComboBox fx:id="category" prefWidth="150.0" promptText="Category" styleClass="combo" />
            <ComboBox fx:id="authorName" prefWidth="150.0" promptText="Author Name" styleClass="combo" />
            <DatePicker fx:id="releaseDate" promptText="Released Date" styleClass="dt-pick" />
            <Button mnemonicParsing="false" onAction="#add" styleClass="btn" text="ADD" />
            <Button mnemonicParsing="false" onAction="#search" styleClass="btn" text="SEARCH" />
            <Button mnemonicParsing="false" onAction="#clear" styleClass="btn" text="CLEAR" />
         </children>
      </HBox>
      <VBox styleClass="pad10" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tblList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="75.0" text="Category">
                	<cellValueFactory>
                		<PropertyValueFactory property="categoryName" />
                	</cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Author">
                	<cellValueFactory>
                		<PropertyValueFactory property="authorName" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn prefWidth="75.0" text="Book Name">
                	<cellValueFactory>
                		<PropertyValueFactory property="name" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="1300.0" minWidth="50.0" prefWidth="75.0" text="Price">
                	<cellValueFactory>
                		<PropertyValueFactory property="price" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn prefWidth="110.0" text="Released Date">
                	<cellValueFactory>
                		<PropertyValueFactory property="releaseDate" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn prefWidth="110.0" text="Remark">
                	<cellValueFactory>
                		<PropertyValueFactory property="remark" />
                	</cellValueFactory>
                </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
