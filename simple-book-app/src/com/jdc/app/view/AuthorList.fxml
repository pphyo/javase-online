<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="view" stylesheets="@common.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox styleClass="search-bar">
         <children>
            <TextField promptText="Enter Author Name" styleClass="txt-fld" />
            <TextField promptText="Enter age" styleClass="txt-fld" />
            <TextField promptText="Enter Country" styleClass="txt-fld" />
            <Button mnemonicParsing="false" styleClass="btn" text="ADD" />
            <Button mnemonicParsing="false" styleClass="btn" text="SEARCH" />
            <Button mnemonicParsing="false" styleClass="btn" text="CLEAR" />
         </children>
      </HBox>
      <HBox styleClass="pad10" VBox.vgrow="ALWAYS">
         <children>
            <TableView prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn maxWidth="800.0" minWidth="30.0" prefWidth="30.0" text="ID" />
                <TableColumn prefWidth="75.0" text="Name" />
                  <TableColumn maxWidth="800.0" minWidth="30.0" prefWidth="40.0" text="Age" />
                  <TableColumn prefWidth="75.0" text="Country" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
